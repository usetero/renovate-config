{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":ignoreUnstable",
    "mergeConfidence:all-badges"
  ],
  "labels": ["dependencies"],
  "schedule": [
    "after 10pm every weekday",
    "before 6am every weekday",
    "every weekend"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Automerge minor/patch updates for Go dependencies",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Group Go minor/patch updates to reduce noise",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "go dependencies (minor/patch)"
    },
    {
      "description": "Terraform updates require manual review (no automerge)",
      "matchManagers": ["terraform"],
      "automerge": false
    },
    {
      "description": "Automerge GitHub runners and Hermit updates",
      "matchDatasources": ["github-runners", "hermit"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Automerge GitHub Actions (except digger)",
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreDeps": ["diggerhq/digger"]
    },
    {
      "description": "Automerge dev dependencies minor/patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Group Docker minor/patch updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "docker dependencies (minor/patch)"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 6am on monday"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 4,
  "vulnerabilityAlerts": {
    "labels": ["dependencies", "security"],
    "schedule": ["at any time"],
    "minimumReleaseAge": "0 days"
  }
}
