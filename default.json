{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":ignoreUnstable",
    "mergeConfidence:all-badges"
  ],
  "labels": ["dependencies"],
  "schedule": [
    "after 10pm every weekday",
    "before 6am every weekday",
    "every weekend"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Automerge minor/patch updates for Go dependencies",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Group Go minor/patch updates to reduce noise",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "go dependencies (minor/patch)"
    },
    {
      "description": "Terraform updates require manual review (no automerge)",
      "matchManagers": ["terraform"],
      "automerge": false
    },
    {
      "description": "Automerge and group GitHub runners updates (no stability wait)",
      "matchDatasources": ["github-runners"],
      "minimumReleaseAge": "0 days",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Automerge and group Hermit tool updates (no stability wait)",
      "matchDatasources": ["hermit"],
      "minimumReleaseAge": "0 days",
      "automerge": true,
      "automergeType": "branch",
      "groupName": "hermit tools"
    },
    {
      "description": "Automerge GitHub Actions (no stability wait, except digger)",
      "matchManagers": ["github-actions"],
      "minimumReleaseAge": "0 days",
      "automerge": true,
      "automergeType": "branch",
      "ignoreDeps": ["diggerhq/digger"]
    },
    {
      "description": "Automerge dev dependencies minor/patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Automerge and group Docker minor/patch updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "docker dependencies (minor/patch)"
    },
    {
      "description": "Group Docker major updates (manual review)",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "groupName": "docker dependencies (major)"
    },
    {
      "description": "npm: longer wait period, no automerge (manual review required)",
      "matchManagers": ["npm"],
      "minimumReleaseAge": "7 days",
      "automerge": false
    },
    {
      "description": "Group npm minor/patch updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies"],
      "groupName": "npm dependencies (minor/patch)"
    },
    {
      "description": "Group npm major updates (manual review)",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "groupName": "npm dependencies (major)"
    },
    {
      "description": "Group npm devDependencies minor/patch",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "npm devDependencies (minor/patch)"
    },
    {
      "description": "Group Go major updates (manual review)",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "groupName": "go dependencies (major)"
    },
    {
      "description": "Group Terraform updates",
      "matchManagers": ["terraform"],
      "groupName": "terraform"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "description": "Pin activate-hermit to releases only (commits get force-pushed away)",
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["cashapp/activate-hermit"],
      "versioning": "semver",
      "extractVersion": "^v(?<version>.*)$"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "minimumReleaseAge": "0 days",
    "schedule": ["before 6am on monday"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 4,
  "vulnerabilityAlerts": {
    "labels": ["dependencies", "security"],
    "schedule": ["at any time"],
    "minimumReleaseAge": "0 days"
  }
}
